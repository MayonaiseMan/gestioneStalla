<Window x:Class="Gestione_Stalla.NuovoAnimale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gestione_Stalla"
        mc:Ignorable="d"
        Title="NuovoAnimale" Height="225" Width="400">
    <Grid>
        <Label Content="Nome" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="121"/>
        <Label Content="Razza" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="121"/>
        <Label Content="Nascita(MM/DD/YY)" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Width="121"/>
        <TextBox x:Name="nome_txt" HorizontalAlignment="Left" Height="26" Margin="136,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="nascita_txt" HorizontalAlignment="Left" Height="26" Margin="136,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <ComboBox x:Name="razze_cmb" HorizontalAlignment="Left" Margin="136,45,0,0" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="ok_btn" Content="ok" HorizontalAlignment="Left" Margin="316,156,0,0" VerticalAlignment="Top" Width="68" Height="30" Click="ok_btn_Click"/>

    </Grid>
</Window>
